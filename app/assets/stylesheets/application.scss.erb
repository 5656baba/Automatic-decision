 @import "bootstrap";
 @import 'font-awesome-sprockets';
 @import 'font-awesome';


 html,body{
  height: 100%;
 }

 .container-fluid, .row, .col{
  height: 100%;
 }

.welcom{
 text-align:center;
 width: 100%;
 padding: 30px;
 padding-left:1em;
 text-indent:-1em;
 font-size: 30px;
 margin: auto;
}

.welcom>p{
 width: 100%;
 padding: 30px;
 padding-left:1em;
 text-indent:-1em;
 font-size: 15px;
 text-align: center;
}

.size{
 color:#FFF;
}

table {
  table-layout: fixed;
  width: 100%;
}

td.example{
 white-space: nowrap;
}

td.td-name {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.unsubscribe-text{
  text-align: center;
}

.pagination{
  justify-content: center;
  background-color: #fff;
}

.nav-item{
 padding: 10px;
}

nav{
 background-color: #ec715f;
}

.search-form{
 text-align: center;
 padding-top: 5px;
}

.font-size{
 width: 20px;
 height: 50px;
}

.col-md-2{
 background-color: #FFCC99;
}

.center-position{
 text-align: center;
}

.comments{
 display: flex;
 justify-content: space-between;
 padding-right: 50px;
}

img{
  border-radius: 50%;
  width: 100px;
  height: 100px;
  object-fit: cover;
}

.post-show{
 display: flex;
}

.likes{
 text-align: right;
 padding-right: 50px;
}

.color{
 color: #00F;
}

.comment-text{
 width: 576px;
 white-space: pre-line;
}

.stick{
  height: 3px;
  width: 100%;
  background-color: #ec715f;
  margin: 8px auto 30px;
}

.stick-comment{
  height: 1px;
  width: 100%;
  background-color: #00F;
  margin: 0px auto 30px;
}

.img-size{
 width: 80%;
 height: 80%;
}

.post-title{
 font-size: 20px;
}

.font-size{
 font-size: 16px;
 font-weight: bold;
}

.error_message{
 color: #F00;
}

.error_message>ul{
 list-style-type: none;
}

.success-message{
 color: #0F0;
}

.slider{
 height: 500px;
}

.image1{
 background-image: image-url("<%= asset_path('free1.jpg') %>");
 height: 800px;
 background-size:cover;
}

.image2{
 background-image: image-url("<%= asset_path('free2.jpg') %>");
 height: 800px;
 background-size:cover;
}

.image3{
 background-image: image-url("<%= asset_path('free3.jpg') %>");
 height: 800px;
 background-size:cover;
}

.image4{
 background-image: image-url("<%= asset_path('free4.jpg') %>");
 height: 800px;
 background-size:cover;
}

.image5{
 background-image: image-url("<%= asset_path('free5.jpg') %>");
 height: 800px;
 background-size:cover;
}

.img-size{
width: 80px;
height: 60px;
}

@media(min-width: 768px) {
 .bottom-navigation {
  display: none;
 }
}


@media screen and (max-width:767.98px) {

td.example{
 overflow: hidden;
 text-overflow: ellipsis;
 white-space: nowrap;
 }

.p{
 white-space: nowrap;
}

.img-size{
 width: 30px;
 height: 30px;
}

input[type="text"] {
 width: 110px;
 height: 40px;
}

.font-size{
 font-size: 15px;
}

.none{
 display: none;
}

input[type="text"].a{
 width: 200px;
 height: 40px;
}
}