<div class="container-fluid mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8 col-12">
      <h3 class="p">お問い合わせ内容確認画面</h3>
      <div>
        <p>お名前：<%= @contact.name %></p>
        <p>メールアドレス：<%= @contact.email %></p>
        <p>お問合せ内容：<%= @contact.message %></p>
        <%= form_with model: @contact, url: contacts_path, method: :post, local: true do |f| %>
          <%= f.hidden_field :name %>
          <%= f.hidden_field :email %>
          <%= f.hidden_field :message %>
          <div class="center-position">
            <p><%= f.submit '送信', class: "btn btn-outline-success btn-block w-50 mx-auto d-block btn-success size" %></p>
          </div>
        <% end %>
      </div>

      <%= form_with model: @contact, url: back_path, method: :post, local: true do |f| %>
        <%= f.hidden_field :name %>
        <%= f.hidden_field :email %>
        <%= f.hidden_field :message %>
        <div class="center-position">
          <p><%= f.submit '入力画面に戻る', class: "btn btn-outline-danger btn-block btn-danger mx-auto d-block w-50 size" %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>