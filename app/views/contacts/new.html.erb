<div class="container-fluid mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8 col-12">
      <div class="error_message">
        <% if flash[:notice] %>
          <div class="flash">
            <%= flash[:notice] %>
          </div>
        <% end %>
      </div>
      <%= form_with model: @contact, url: check_path, local:true do |f| %>
        <div class="form-group">
          <%= f.label :name, 'お名前*' %>
          <%= f.text_field :name, autofocus: true, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :email, 'メールアドレス*' %>
          <%= f.text_field :email, autofocus: true, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :message, 'お問い合わせ内容*' %>
          <%= f.text_area :message, size: '10x10', class: 'form-control' %>
        </div>

        <div>
          <%= f.submit '入力内容確認', class: "btn btn-outline-danger btn-block btn-danger w-auto mx-auto d-block size" %>
        </div>
      <% end %>
    </div>
  </div>
</div>