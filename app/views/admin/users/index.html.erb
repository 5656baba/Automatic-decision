<div class="container">
  <h3 class="row justify-content-start position"><span class="thead">会員一覧</span></h3>
  <div class="row justify-content-center">
    <div class="col-md-8">
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th class="thead">会員ID</th>
            <th class="thead">氏名</th>
            <th class="thead">メールアドレス</th>
            <th class="thead">ステータス</th>
            <th class="thead" colspan="3"></th>
          </tr>
        </thead>
        <tbody>
        <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td>
            <%= link_to admin_user_path(user.id) do %>
              <%= user.last_name %><%= user.first_name %>
            <% end %>
          </td>
          <td><%= user.email %></td>
          <td>
            <% if user.is_active==true %>
            <p class="text-success">有効</p>
            <% else %>
            <p class="text-danger">退会</p>
            <% end %>
          </td>
        </tr>
        <% end %>
        </tbody>
      </table>
      <%= paginate @users %>
    </div>
  </div>
</div>