<div class="container-fluid">
  <div class="error_message">
    <% if @user.errors.any? %>
      <h2><%= @user.errors.count %>errors prohibited this obj from being saved:</h2>
      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      </ul>
      <% end %>
    <% end %>
  </div>
  <div class="row justify-content-center">
    <div class="col-md-2"></div>
    <div class="col-md-8 mt-5">
      <h3 class="center-position"><%= @user.full_name %>さんの会員情報編集</h3>
      <%= form_with model: @user, url: admin_user_path, local:true do |f| %>
      <table class="table">
        <tr>
          <th>会員ID</th>
          <th colspan="2"><%= @user.id %></th>
        </tr>
        <tr>
          <th>氏名</th>
          <th><%= f.text_field :last_name, class: "rounded" %></th>
          <th><%= f.text_field :first_name, class: "rounded" %></th>
        </tr>
        <tr>
          <th>フリガナ</th>
          <th><%= f.text_field :last_name_kana, class: "rounded" %></th>
          <th><%= f.text_field :first_name_kana, class: "rounded" %></th>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <th colspan="2"><%= f.text_field :email, class: "rounded" %></th>
        </tr>
        <tr>
          <th>会員ステータス</th>
          <th>
            <%= f.radio_button :is_active, true %>
            <%= f.label :is_active, "有効", {value: true, style: "display: inline-block;"} %>
          </th>
          <th>
            <%= f.radio_button :is_active, false %>
            <%= f.label :is_active, "退会", {value: false, style: "display: inline-block;"} %>
          </th>
        </tr>
      </table>
      <div class="row justify-content-center">
        <div class="col-md-3">
          <%= f.submit "変更を保存", class: 'btn btn-outline-success btn-block btn-success size' %>
        </div>
      </div>
      <% end %>
    </div>
    <div class="col-md-2"></div>
  </div>
</div>