<div class="container-fluid">
  <div class="row justify-content-center">
    <div class="col-md-2"></div>
    <div class="col-md-8 col-12 mt-5">
      <h4>コメント先の相談タイトル：<%= @comment.post.title %></h4>
      <p>投稿者：<%= @comment.user.full_name %></p>
      <p>投稿日：<%= @comment.created_at.to_s(:datetime_jp) %></p>
      <p><%= @comment.comment %></p>
      <p style="text-align: right;" class="pr-5"><%= link_to '削除する', admin_comment_path(@comment.id), method: :delete %></p>
    </div>
    <div class="col-md-2"></div>
  </div>
</div>