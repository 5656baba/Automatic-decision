<div class="container-fluid">
  <div class="row justify-content-center">
    <div class="col-md-2"></div>
    <div class="col-md-8 col-12 mt-5">
      <table class="table table-hover">
        <thead class="thead-dark">
          <tr>
            <th scope="col">投稿者</th>
            <th scope="col">相談タイトル</th>
            <th scope="col" colspan="2">相談内容</th>
            <th scope="col">投稿日時</th>
            <th scope="coi"></th>
            <th></th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td class="td-name"><%= post.user.full_name %></td>
              <td class="td-name"><%= post.title %></td>
              <td class="td-name" colspan="2"><%= post.content %></td>
              <td class="example"><%= post.created_at.to_s(:datetime_jp) %></td>
              <td></td>
              <td class="example"><%= link_to '詳細へ', admin_post_path(post.id) %></td>
              <td class="example"><%= link_to '削除する', admin_post_path(post.id), method: :delete %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @posts %>
    </div>
    <div class="col-md-2"></div>
  </div>
</div>