<div class="container">
  <div class="error_message">
    <% if @user.errors.any? %>
      <h2><%= @user.errors.count %>errors prohibited this obj from being saved:</h2>
      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      </ul>
      <% end %>
    <% end %>
  </div>
  <div class="row justify-content-start">
    <div class="col-md-9">
  　　<h3 class="row justify-content-start"><span class="thead">会員情報編集</span></h3>
  　　<%= form_with model: @user, url: information_path, local:true do |f| %>
      <table class="table">
        <tr>
          <th>氏名</th>
          <th><%= f.text_field :last_name, class: "rounded" %></th>
          <th><%= f.text_field :first_name, class: "rounded" %></th>
        </tr>
        <tr>
          <th>カナ</th>
          <th><%= f.text_field :last_name_kana, class: "rounded" %></th>
          <th><%= f.text_field :first_name_kana, class: "rounded" %></th>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <th><%= f.text_field :email, class: "rounded" %></th>
        </tr>
      </table>
      <div>
        <p>
          <button type="submit" class="btn btn-outline-success btn-block btn-success w-50 mx-auto d-block size">編集内容をを保存</button>
        </p>
        <p>
          <%= link_to "退会する",unsubscribe_informations_path, class: "btn btn-outline-danger btn-block btn-danger w-50 mx-auto d-block size" %>
        </p>
      </div>
    <% end %>
    </div>
  </div>
</div>
