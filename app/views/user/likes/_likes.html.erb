<% if comment.liked_by?(current_user) %>
　<%= link_to post_comment_like_path(comment), method: :delete, remote: true do %>
　  <i class="fa fa-heart" aria-hidden="true" style="color: red;"><%= comment.likes.count %>いいね</i>
　<% end %>
<% else %>
　<%= link_to post_comment_likes_path, method: :post, remote: true do %>
　　<i class="fa fa-heart" aria-hidden="true" style="color: #C0C0C0;"><%= comment.likes.count %>いいね</i>
　<% end %>
<% end %>