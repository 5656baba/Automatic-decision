<div class="container mt-5">
  <div class="row">
    <div class="col-md-10">
      <table class="table table-hover">
        <thead class="thead-dark">
          <tr>
            <th scope="col">相談タイトル</th>
            <th scope="col" colspan="2">コメント内容</th>
            <th scope="col">投稿日時</th>
            <th scope="coi"></th>
          </tr>
        </thead>
        <tbody>
          <% @comments.each do |comment| %>
            <tr>
              <td class="td-name"><%= comment.post.title %></td>
              <td class="td-name" colspan="2"><%= comment.comment %></td>
              <td class="example"><%= comment.created_at.to_s(:datetime_jp) %></td>
              <td class="example"><%= link_to '削除する', resume_path(comment.id), method: :delete %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>